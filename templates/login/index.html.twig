{% extends 'base.html.twig' %}

{% block title %}
	Login
{% endblock %}

{% block body %}
<form class="form_main w-25 d-flex align-items-center bg-primary m-2 bg-primary-inverse rounded" action="{{ path('app_login') }}">
    <p class="heading">Login</p>
    <div class="inputContainer">
      <i class="bi bi-at"></i>  
    <input placeholder="Email" id="email" class="inputField" type="text" value: "last_username">
    </div>
    
<div class="inputContainer">
    <i class="bi bi-lock-fill"></i>
     <input class="inputField" placeholder="Password" type="password" id="password" name="_password">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
</div>
              
           
<button class= "bg-primary" id="button">Submit</button>
    <div class="signupContainer">
        <p>Don't have any account?</p>
        <a href="{{ path('app_registration') }} ">Sign up</a>
    </div>
</form>

{% endblock %}
