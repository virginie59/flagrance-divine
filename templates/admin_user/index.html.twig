{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs
{% endblock %}

{% block body %}
	<h1 class="mx-auto my-3">Index des utilisateurs</h1>
	<div class="m-5 table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					<th>Mot de passe</th>
					<th>Prénom</th>
					<th>Nom</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.password }}</td>
						<td>{{ user.firstname }}</td>
						<td>{{ user.lastname }}</td>
						
						<td>
							<a class="btn btn-primary my-1" href="{{ path('app_admin_user_show', {'id': user.id}) }}">Aperçu</a>
							<a class="btn btn-primary-inverse" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Editer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn bg-secondary-inverse text-white" href="{{ path('app_admin') }}">Retour</a>

	</div>
{% endblock %}
