{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="mx-auto my-3">{{ user.firstname }} {{ user.lastname }}</h1>
<div class="m-5 table-responsive">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ user.avatar }}</td>
            </tr>
        </tbody>
    </table>
<div class=" d-flex justify-content-center">
    <a class="btn btn-info my-3" href="{{ path('app_admin_user_index') }}">Retour à l'index</a>
    </div>
<div class=" d-flex justify-content-center mb-3">
    <a class="btn btn-primary" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Editer</a>
    </div>
<div class=" d-flex justify-content-center">
    {{ include('admin_user/_delete_form.html.twig') }}
</div>
</div>
{% endblock %}
